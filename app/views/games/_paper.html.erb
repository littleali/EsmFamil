
<div class = "container-fluid">
  <div class = "row">
	<!--<div class="form-group" id="hp-input-fields">-->

      <div class = "table-responsive">
        <table class="table">
          <tbody>
          <% counter = paper.paper_fields.length %>
          <%(0..counter).step(3) do |n| %>
              <tr>
                <% (n..n+2).each do |m| %>
                    <%if(m >= counter)%>
                        <% break %>
                    <%end%>
                    <% pf = paper.paper_fields[m] %>
                    <th>
                      <table>
                        <tr>
                          <%= pf.name %>
                        </tr>
                        <tr>
                          <%= form_for :tf , url: {action: 'save_paper_field' , controller: 'games' , pf_id: pf.id } , :remote => true  do
                          |f2| %>
                              <%= text_field_tag "pf.value",pf.value , autofocus: true , :class => 'form-control' %>
                          <% end %>
                        </tr>
                      </table>
                    </th>
                <% end %>
              </tr>


          <%end%>
          </tbody>

        </table>
      </div>

	</div>
  </div>