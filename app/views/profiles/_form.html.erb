<%= form_for :profile , :url => {:controller => "profiles" , :action => "update_field", :id => @profile.id , :title => :fname} do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :fname %><br>
    <%= text_field_tag :fname , @profile.fname %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



