<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="float:left"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">ورود</h4>
      </div>
      <div class="modal-body">
        <div id="hp-signup-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group" id="hp-input-fields">
              <% devise_error_messages! %>
              <%= f.text_field :login ,autofocus: true, :placeholder => :'پست الکترونیکی یا نام کاربری' ,:class => 'form-control', :id=>'hp-inner-input-fields' %>    
            </div>
            <div class="form-group" id="hp-input-fields"> 
              <%= f.password_field :password, autocomplete: "off", :placeholder =>:'*گذرواژه',:class => 'form-control', :id=>'hp-inner-input-fields' %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me %> 
              <%= f.label "مرا به خاطرت نگه دار" %></div>
            <% end -%>
            <% if flash[:alert] %>
              <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
              </div>
            <% end %>
            <br>
            <div>
              <%= f.submit "ورود", :class=>"btn btn-default btn-block" ,:id=>"login-btn"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
