                        <%= select_month(1,{use_month_names: persian_month_names}, {class:"col-md-5"}) %>
                        <%= select_day(1, {class:"col-md-2"}) %>
                    </div>
                  </div>
                 </div>


                <% if flash[:alert] %>
                    <div class="alert alert-danger" role="alert">
                      <%= flash[:alert] %>
                    </div>
                <% end %>
                <div class="container">
                  <div class = "row">
                    <div class="col-md-offset-2 col-md-8 col-md-offset-2">
                        <%= show_simple_captcha(:label => "",:class => 'test') %>
                    </div>
                  </div>
                </div>

                <div>
                  <%= f.submit "ثبت نام", :class=>"btn btn-default btn-block" ,:id=>"hp-signup-btn"%>
                </div>
              <% end %>
              <div id= "hp-links">

		            <%= render "devise/shared/links" %>
              </div>
          </div>
          <div class = "col-md-8  hp-intro-jumbotron jumbotron" id="hp-intro-jumbotron">
            <div class = "transparent" id="hp-transparent-box">
