    <% if flash[:notice] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <div class="jumbotron" id = "hp-main-jumbotron">
      <div class="container">
        <!-- <div><%=image_tag("logo.jpg", :alt =>"logo")%> </div> -->
        <div class="row">
          <div class="col-md-4" id="hp-signup-form">
            <h2 id="hp-signup-form-head">فرم ثبت‌نام</h2>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <!--inja > -->     
                
                <div class="form-group input-group" id="hp-input-fields">
                  <% devise_error_messages! %>

                  <%= f.email_field :email ,autofocus: true, :placeholder => :'پست الکترونیکی' ,:class => 'form-control', 'aria-describedby'=>'basic-addon2', :id=>'hp-inner-input-fields' %>
                  <span class="input-group-addon" id="basic-addon2">
                    <span class="glyphicon glyphicon-star-empty" ></span>
                  </span>
                </div>

                <div class="form-group  input-group" id="hp-input-fields"> 
                  <%= f.password_field :password, autocomplete: "off", :placeholder =>:'*گذرواژه',:class => 'form-control','aria-describedby'=>'basic-addon2', :id=>'hp-inner-input-fields' %>
                  <span class="input-group-addon" id="basic-addon2">
                    <span class="glyphicon glyphicon-star-empty" ></span>
                  </span>
                </div>

                <div class="form-group  input-group" id="hp-input-fields">
                  <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder =>:'*تکرار گذرواژه' ,:class => 'form-control', :id=>'hp-inner-input-fields' %>
                  <span class="input-group-addon" id="basic-addon2">
                    <span class="glyphicon glyphicon-star-empty" ></span>
                  </span>
                </div>

                <div class="form-group help-block" id="hp-input-fields">
                  <% if @validatable %><i id="hp-password-text">( گذرواژه حداقل به طول <%= @minimum_password_length %> و شامل عدد، حروف بزرگ و کوچک باشد)</i><% end %><br/>
                </div>

                <div class="form-group input-group" id="hp-input-fields">
                  <%= f.text_field :username, :placeholder => :'نام مستعار' ,:class => 'form-control', :id=>'hp-inner-input-fields' %>
                  <span class="input-group-addon" id="basic-addon2">
                    <span class="glyphicon glyphicon-star-empty" ></span>
                  </span>
                </div>



