
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4" id="hp-signup-form">
    <div class="jumbotron" id = "hp-main-jumbotron" >
      <h2 id="signin-form-head"><%= I18n.t('forgot_password')%></h2>
      <div class="container" >
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <div><%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, :class => 'form-control' %></div>

            <div><%= f.submit I18n.t("send_password_instruction"), :class => "btn btn-block btn-send_password" %></div>
        <% end %>

        <div id= "hp-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
</div>
