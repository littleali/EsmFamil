
<%- if controller_name != 'sessions' %>
<div id="sign-in-btn">
  <%= button_to "ورود" , new_session_path(resource_name) ,:class=>"btn btn-default btn-block login-btn" ,:id=>"login-btn"%>
</div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "صفحه‌ی اول", new_registration_path(resource_name) %>
<% end -%>



<!--
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "گذرواژه‌ی خود را فراموش کرده‌اید؟", new_password_path(resource_name) %><br />
<% end -%>
-->

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  
  <div>
  <%= button_to "اطلاعات تأیید را دریافت نکرده‌اید؟", new_confirmation_path(resource_name), :method => 'get', :class=>"btn btn-default btn-block confirmation-btn" ,:id=>"confirmation-btn" %> 

  <!--<%= link_to "لینک تایید را دریافت نکرده‌اید؟", new_confirmation_path(resource_name) %>-->
</div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>


<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
