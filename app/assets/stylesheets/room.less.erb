
@import "color-palette";
.new-room-list-box {
    .list-header {
        font-family: 'Dastnevis', 'EDastnevis', Sans-serif;
        text-align: center;
        font-size: 21px;
        font-weight: bold;
        border-bottom: 3px solid @esm-black;
        margin-bottom: 1%;
        /*border-bottom: 1px solid black;*/
    }
    .list-container {
        border: 2px dashed black;
        padding: 5px;
        .list-row {
            margin-top: 3px;
            /*padding: 5px;*/
            /*background-color: @trans-yellow;*/

            .new-btn {
                margin: 0px;
                border: none;
                font-family: 'Dastnevis', 'EDastnevis', Sans-serif;
                font-size: 24px;
                text-align: center;
                color: @esm-black;
                width: 100%;
                /*border: 1px solid ;*/
                /*box-shadow: 1px 0px 0px;*/

                .light-orange{
                    background-color: @esm-light-orange;

                }
                .sharp-orange{
                    background-color: @esm-sharp-orange;
                }
            }
            .row {
                border: none;
                text-align: center;
                margin-top: 1%;
            }
        }
    }
}